<div class="container mt-5">
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <div class="card mb-3 mx-auto w-75">
      <div class="card-header"><div class="ms-md-5">新規登録</div></div>
      <div class="card-body ms-md-5 mt-3">
        <div class="row mb-5">
          <div class="col-md-3">
            <%= f.label :name, "名前", class: "col-form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
            <%= render "shared/error", model: @user, attribute: :name %>
          </div>
        </div>
        <div class="row mb-5">
          <div class="col-md-3">
            <%= f.label :email, class: "form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxx@email.com", class: "form-control" %>
            <%= render "shared/error", model: @user, attribute: :email %>
          </div>
        </div>
        <div class="row mb-5">
          <div class="col-md-3"> 
            <%= f.label :password, class: "form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数6文字以上", class: "form-control" %>
            <%= render "shared/error", model: @user, attribute: :password %>
          </div>
        </div>
        <div class="row mb-5">
          <div class="col-md-3">
            <%= f.label :password_confirmation, class: "form-label" %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "再度ご入力ください", class: "form-control" %>
            <%= render "shared/error", model: @user, attribute: :password_confirmation %>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-row-reverse w-75 mx-auto">
      <%= f.submit "登録", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
