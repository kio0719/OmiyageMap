<% posts.each do |post| %>
  <%= link_to post, data: { "turbolinks" => false } do %>
    <div class="card mb-5 mx-auto w-75">
      <div class="card-header bg-transparent">
        <div class="row">
          <div class="col-md-2">
            <object>
              <%= link_to users_profile_path(post.user) do %>
                <div class="text-center">
                  <% if post.user.icon.attached? %>
                    <%= image_tag post.user.icon.variant(resize_to_limit: [200, 200]), class: "sm-circle-image" %>
                  <% else %>
                    <%= image_tag ("icon.png"), size: '200x200', class: "sm-circle-image"  %>
                  <% end %>
                </div>
                <div class="text-center"><%= post.user.name %></div>
              <% end %>
            </object>
          </div>
          <div class="col-md-10 text-center text-md-start">
            <div><%= post.name %></div>
            <div><%= post.place %></div>
            <div><%= post.updated_at.to_s(:datetime_jp) %></div>
            <div class="d-flex justify-content-between">
              <div id="likes_btn_<%= post.id %>">
                <%= render "likes/like", post: post %>
              </div>
              <% if user_signed_in? && post.user_id == current_user.id %>
                <div class="btn-group">
                  <object><%= link_to "更新", [:edit, post], class: "btn btn-primary me-3", data: { "turbolinks" => false } %></object>
                  <object><%= link_to "削除", 'javascript:void(0)', class: "btn btn-danger", 'data-bs-toggle': "modal", 'data-bs-target': "#deleteModal#{post.id}" %></object>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row m-3">
        <div class="col-lg-6 text-center mb-lg-0 mb-3"><%= image_tag post.image.variant(resize_to_limit: [200, 200]), class: "product-image" %></div>
        <div class="col-lg-6 text-center text-lg-start"><%= post.caption %></div>
      </div>
    </div>
  <% end %>
  <div class="modal fade" id="deleteModal<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">削除確認</h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">削除しますか？</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-bs-dismiss="modal">やめる</button>
          <%= button_to "削除",post_path(post),method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
